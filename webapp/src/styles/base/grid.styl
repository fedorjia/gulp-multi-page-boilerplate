[class*='row'],
[class*='col-'],
[class*='sm-'],
.row:after {
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
}

[class*='col-'] {
	float: left;
	min-height: 1px;
	padding-right: 15px;
	padding-left: 15px;
}

[class*='col-'] [class*='col-']:last-child {
	padding-right: 0;
}

.row {
	width: 100%;
	//max-width: 1140px;
	//min-width: 748px; /* when using padded row on ipad in portrait mode, width should be viewport-width - padding = (768 - 20) = 748. actually, it should be even smaller to allow for padding of row containing element */
	margin: 0 auto;
	overflow: hidden;
}

.row:after {
	content: "";
	display: table;
	clear: both;
}

.col-offset-right {
	float: right;
}

/* Content Columns */

.col-1-1 {
	width: 100%;
}
.col-2-3, .col-8-12 {
	width: 66.66%;
}

.col-1-2, .col-6-12 {
	width: 50%;
}

.col-1-3, .col-4-12 {
	width: 33.33%;
}

.col-1-4, .col-3-12 {
	width: 25%;
}

.col-1-5 {
	width: 20%;
}

.col-1-6, .col-2-12 {
	width: 16.667%;
}

.col-1-7 {
	width: 14.28%;
}

.col-1-8 {
	width: 12.5%;
}

.col-1-9 {
	width: 11.1%;
}

.col-1-10 {
	width: 10%;
}

.col-1-11 {
	width: 9.09%;
}

.col-1-12 {
	width: 8.33%
}

/* Layout Columns */

.col-11-12 {
	width: 91.66%
}

.col-10-12 {
	width: 83.333%;
}

.col-9-12 {
	width: 75%;
}

.col-5-12 {
	width: 41.66%;
}

.col-7-12 {
	width: 58.33%
}

/* col-offset blocks */

.col-offset-2-3, .col-offset-8-12 {
	margin-left: 66.66%;
}

.col-offset-1-2, .col-offset-6-12 {
	margin-left: 50%;
}

.col-offset-1-3, .col-offset-4-12 {
	margin-left: 33.33%;
}

.col-offset-1-4, .col-offset-3-12 {
	margin-left: 25%;
}

.col-offset-1-5 {
	margin-left: 20%;
}

.col-offset-1-6, .col-offset-2-12 {
	margin-left: 16.667%;
}

.col-offset-1-7 {
	margin-left: 14.28%;
}

.col-offset-1-8 {
	margin-left: 12.5%;
}

.col-offset-1-9 {
	margin-left: 11.1%;
}

.col-offset-1-10 {
	margin-left: 10%;
}

.col-offset-1-11 {
	margin-left: 9.09%;
}

.col-offset-1-12 {
	margin-left: 8.33%
}

@media handheld, only screen and (max-width: 767px) {
	.row {
		width: 100%;
		min-width: 0;
		margin-left: 0;
		margin-right: 0;
		padding-left: 20px; /* row-space to left */
		padding-right: 10px; /* row-space to right: (row-space-left - column-space) e.g. 20px-10px=10px */
	}

	[class*='col-'] {
		width: auto;
		float: none;
		margin: 10px 0;
		padding-left: 0;
		padding-right: 10px; /* column-space */
	}

	[class*='col-'] [class*='col-'] {
		padding-right: 0;
	}

	/* sm Layout */

	[class*='sm-col-'] {
		float: left;
		margin: 0 0 10px;
		padding-left: 0;
		padding-right: 10px; /* column-space */
		padding-bottom: 0;
	}

	.sm-col-1-1 {
		width: 100%;
	}
	.sm-col-2-3, .sm-col-8-12 {
		width: 66.66%;
	}

	.sm-col-1-2, .sm-col-6-12 {
		width: 50%;
	}

	.sm-col-1-3, .sm-col-4-12 {
		width: 33.33%;
	}

	.sm-col-1-4, .sm-col-3-12 {
		width: 25%;
	}

	.sm-col-1-5 {
		width: 20%;
	}

	.sm-col-1-6, .sm-col-2-12 {
		width: 16.667%;
	}

	.sm-col-1-7 {
		width: 14.28%;
	}

	.sm-col-1-8 {
		width: 12.5%;
	}

	.sm-col-1-9 {
		width: 11.1%;
	}

	.sm-col-1-10 {
		width: 10%;
	}

	.sm-col-1-11 {
		width: 9.09%;
	}

	.sm-col-1-12 {
		width: 8.33%
	}

	/* Layout Columns */

	.sm-col-11-12 {
		width: 91.66%
	}

	.sm-col-10-12 {
		width: 83.333%;
	}

	.sm-col-9-12 {
		width: 75%;
	}

	.sm-col-5-12 {
		width: 41.66%;
	}

	.sm-col-7-12 {
		width: 58.33%
	}

	.hide-on-sm {
		display: none !important;
		width: 0;
		height: 0;
	}
}
